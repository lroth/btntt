{% extends 'BtnAppBundle::layout.html.twig' %}

{% block content %}
    <h2>Project list</h2>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created_at</th>
                <th>Is_active</th>
                <th>{% trans %}crud.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isactive }}</td>
                <td>    <a href="{{ path('project_show', { 'id': entity.id }) }}" class="btn btn-primary">{% trans %}crud.show{% endtrans %}</a>    <a href="{{ path('project_edit', { 'id': entity.id }) }}" class="btn btn-primary">{% trans %}crud.edit{% endtrans %}</a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}

            <a href="{{ path('project_new') }}" class="btn btn-primary">{% trans %}crud.create_new{% endtrans %}</a>

{% endblock %}
