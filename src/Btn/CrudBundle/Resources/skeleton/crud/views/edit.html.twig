{{ "{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}" }}
{{ "{% extends 'BtnCrudBundle::base.html.twig' %}" }}

{{ "{% form_theme edit_form 'BtnCrudBundle:Form:fields.html.twig' %}" }}

{{ "{% block content %}" }}

    <form action="{{ "{{ path('"~ route_name_prefix ~"_update', { 'id': entity.id }) }}" }}" method="post" {{ "{{ form_enctype(edit_form) }}" }} class="well form-horizontal">
        <fieldset>
            <legend>{{ entity }} edit</legend>
            {{ "{{ form_widget(edit_form) }}" }}
            <p>
                <button type="submit" class="btn btn-success">{{ '{% trans %}' }}crud.save{{ '{% endtrans %}' }}</button>
            </p>
        </fieldset>
    </form>

    {% set hide_edit, hide_delete = true, false %}
    {% include 'views/others/record_actions.html.twig' %}

{{ "{% endblock %}" }}

{{ "{% block breadcrumb %}" }}
    {{ "{{ breadcrumb({'"~ route_name_prefix ~"': 'crud.breadcrumb.list', '"~ route_name_prefix ~"_edit': 'crud.breadcrumb.edit'}) }}" }}
{{ "{% endblock %}" }}