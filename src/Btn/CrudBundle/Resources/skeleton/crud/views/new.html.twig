{{ "{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}" }}
{{ "{% extends 'BtnCrudBundle::base.html.twig' %}" }}

{{ "{% form_theme form 'BtnCrudBundle:Form:fields.html.twig' %}" }}

{{ "{% block content %}" }}

    <form action="{{ "{{ path('"~ route_name_prefix ~"_create') }}" }}" method="post" {{ "{{ form_enctype(form) }}" }} class="well form-horizontal">
          <fieldset>
              <legend>{{ entity }} creation</legend>
              {{ "{{ form_widget(form) }}" }}
              <p>
                  <button type="submit" class="btn btn-success">{{ '{% trans %}' }}crud.create{{ '{% endtrans %}' }}</button>
              </p>
        </fieldset>
    </form>

    {% set hide_edit, hide_delete = true, true %}
    {% include 'views/others/record_actions.html.twig' %}

{{ "{% endblock %}" }}

{{ "{% block breadcrumb %}" }}
    {{ "{{ breadcrumb({'"~ route_name_prefix ~"': 'crud.breadcrumb.list', '"~ route_name_prefix ~"_new': 'crud.breadcrumb.new'}) }}" }}
{{ "{% endblock %}" }}